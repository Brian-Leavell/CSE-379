bored: .string  "+---------------------+", 0xA, 0xC
 .string        "|                     |", 0xA, 0xC
 .string        "|                     |", 0xA, 0xC
 .string        "|                     |", 0xA, 0xC
 .string        "|                     |", 0xA, 0xC
 .string        "|                     |", 0xA, 0xC
